<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:startTakePhotoView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toCameraClicked"
        android:layout_alignParentBottom="true"
        android:text="start" />

    <com.ui.jerry.StartTakePhotoView
        android:id="@+id/startTakePhotoView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        startTakePhotoView:src="@drawable/topic_icon_camera"/>

        <ImageView 
            android:layout_marginTop="200dp"
            android:id="@+id/image"
                    android:scaleType="fitXY"
            android:layout_width="match_parent"
        android:layout_height="400dp"/>


